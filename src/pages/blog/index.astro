---
import { getCollection } from 'astro:content';

import MainLayout from '~/layouts/MainLayout.astro';
import PageLayout from '~/shared/components/PageLayout.astro';
import BlogPostsList from '~/shared/components/svelte/BlogPostsList.svelte';

const blogEntries = await getCollection('blog');
---

<MainLayout>
	<PageLayout
		title="Here is a collection of my posts on Web Development"
		intro="In total, I've written 16 articles in this blog. You can find them all below, or by searching for a post title."
	>
		<BlogPostsList client:load posts={blogEntries} />
	</PageLayout>
</MainLayout>
