---
import { getCollection } from 'astro:content';

import MainLayout from '~/layouts/MainLayout.astro';

import PageLayout from '~/shared/components/PageLayout.astro';
import { TopTracks, Metrics } from '~/shared/components/jsx';

const blogEntries = await getCollection('blog');

export const prerender = true;
---

<MainLayout title="Dashboard | Sergio Barria">
	<PageLayout
		title="Dashboard"
		intro="Here I can track different metrics by collecting data from some of the platforms I use. That way I can see my personal coding stats, habits, progress..."
	>
		<Metrics client:load totalPosts={blogEntries.length} />

		<TopTracks client:load />
	</PageLayout>
</MainLayout>
