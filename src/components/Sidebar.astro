---
import { Image } from 'astro:assets';

import { cn } from '~/lib/utils';
import logo from '~/assets/logo-2.png';

const links = [
    { name: 'home', href: '/' },
    { name: 'about', href: '/about' },
    { name: 'blog', href: '/blog' }
    // { name: 'showcase', href: '/showcase' }
];
const pathname = new URL(Astro.url).pathname.split('/')[1];
---

<aside class="top-0 w-1/4 max-w-[100px] py-4 md:sticky md:h-screen">
    <Image src={logo} alt="logo" width={40} height={50} class="mb-3 pl-3 md:mb-4" />
    <nav class="flex md:flex-col md:items-start">
        {
            links.map(({ name, href }) => {
                const isActive = pathname === href.slice(1);

                return (
                    <a
                        href={href}
                        rel="prefetch"
                        class={cn(
                            'inline-block rounded-md px-3 py-1 text-sm',
                            isActive ? 'bg-neutral-800' : 'text-neutral-500 hover:text-neutral-300'
                        )}
                    >
                        {name}
                    </a>
                );
            })
        }
    </nav>
</aside>
