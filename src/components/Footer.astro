---
import SpotifyCard from '~/components/vue/SpotifyCard.vue';
import ArrowUpRightIcon from './ArrowUpRightIcon.astro';
import { cn } from '~/lib/utils';

const links = [{ name: 'gists', href: 'https://gist.github.com/sergiobarria' }];

const pathname = new URL(Astro.url).pathname.split('/')[1];
---

<footer class="mt-7">
    <div class="flex justify-between">
        <SpotifyCard client:load />
        <div class="flex items-center gap-3">
            {
                links.map(({ href, name }) => (
                    <a
                        href={href}
                        rel="prefetch"
                        target={href.startsWith('/') ? '_self' : '_blank'}
                        rel={href.startsWith('/') ? '' : 'noopener noreferrer'}
                        class={cn(
                            'flex items-center gap-1 text-sm',
                            pathname === href.slice(1)
                                ? 'text-neutral-200'
                                : 'text-neutral-500 hover:text-neutral-300'
                        )}
                    >
                        <span>{name}</span>
                        <ArrowUpRightIcon className="w-3 h-3" />
                    </a>
                ))
            }
        </div>
    </div>
</footer>
