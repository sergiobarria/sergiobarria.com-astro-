---
import { cn } from '@/lib/utils'
import ArrowUpRightIcon from './ArrowUpRightIcon.astro'

interface Props {
    title: string
    value: string | number
    href?: string
}

const { title, href, value } = Astro.props as Props
---

<a href={href} class={cn(href && 'cursor-pointer')}>
    <div
        class={cn(
            'flex flex-col border border-neutral-600 bg-neutral-800 p-3 rounded',
            href && 'hover:bg-neutral-900'
        )}
    >
        <small class="text-ellipsis">{title}</small>
        <div class="flex items-center justify-between">
            <span class="text-xl font-semibold">{value}</span>
            {href && <ArrowUpRightIcon class="h-4 w-4" />}
        </div>
    </div>
</a>
