<div class="flex w-auto items-end gap-0.5 overflow-hidden">
    <span id="bar1" class="h-2 w-[1px] bg-green-500"></span>
    <span id="bar2" class="h-1 w-[1px] bg-green-500"></span>
    <span id="bar3" class="h-3 w-[1px] bg-green-500"></span>
    <span id="bar4" class="h-1 w-[1px] bg-green-500"></span>
</div>

<script>
    import {
        AnimationOptionsWithOverrides,
        ValueKeyframesDefinition,
        animate
    } from 'motion'

    const bar1 = document.getElementById('bar1')
    const bar2 = document.getElementById('bar2')
    const bar3 = document.getElementById('bar3')
    const bar4 = document.getElementById('bar4')

    function animateElement(
        element: HTMLElement,
        transformArray: ValueKeyframesDefinition,
        animationOptions?: AnimationOptionsWithOverrides
    ) {
        if (!element) {
            console.error(`Element ${element} not found`)
            return
        }

        animate(
            element,
            {
                transform: transformArray
            },
            animationOptions || {
                duration: 0.5,
                repeat: Infinity,
                easing: ['ease-in-out']
            }
        )
    }

    bar1 &&
        animateElement(
            bar1,
            [
                'scaleY(1.0) translateY(0rem)',
                'scaleY(1.5) translateY(-0.082rem)',
                'scaleY(1.0) translateY(0rem)'
            ],
            {
                duration: 0.5,
                repeat: Infinity,
                easing: ['ease-in-out']
            }
        )

    bar2 &&
        animateElement(
            bar2,
            [
                'scaleY(1.0) translateY(0rem)',
                'scaleY(3) translateY(-0.083rem)',
                'scaleY(1.0) translateY(0rem)'
            ],
            {
                delay: 0.2,
                duration: 0.75,
                repeat: Infinity,
                easing: ['ease-in-out']
            }
        )

    bar3 &&
        animateElement(
            bar3,
            [
                'scaleY(1.0)  translateY(0rem)',
                'scaleY(0.5) translateY(0.31rem)',
                'scaleY(1.0)  translateY(0rem)'
            ],
            {
                delay: 0.3,
                duration: 0.75,
                repeat: Infinity,
                easing: ['ease-in-out']
            }
        )

    bar4 &&
        animateElement(
            bar4,
            [
                'scaleY(1.0) translateY(0rem)',
                'scaleY(2) translateY(-0.083rem)',
                'scaleY(1.0) translateY(0rem)'
            ],
            {
                delay: 0.4,
                duration: 0.75,
                repeat: Infinity,
                easing: ['ease-in-out']
            }
        )
</script>
