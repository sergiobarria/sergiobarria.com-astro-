---
import { cn } from '~/lib/utils';

import Sidebar from '~/components/sidebar.astro';
import Head from '~/components/head.astro';
import Footer from '~/components/footer.astro';

import '../globals.css';

interface Props {
    title?: string;
    description?: string;
}

const { title, description } = Astro.props as Props;
---

<html lang="en" class="scroll-smooth bg-[#111010] text-neutral-100">
    <Head
        title={title ?? 'Home | Sergio Barria'}
        description={description ?? 'Engineer, developer, amateur writer'}
    />
    <body
        class={cn(
            'flex max-w-screen-md flex-col gap-6 px-5 pt-10 antialiased',
            'md:flex-row md:mx-auto md:space-y-0 md:px-0 md:pt-24'
        )}
    >
        <Sidebar />

        <main class="max-w-[600px] flex-1 pb-8">
            <slot />

            <Footer />
        </main>
    </body>
</html>
