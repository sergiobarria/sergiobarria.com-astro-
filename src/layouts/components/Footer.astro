---
import clsx from 'clsx';

import SocialLinks from '~/shared/components/SocialLinks.astro';
import Container from './Container.astro';
import { SpotifyCard } from '~/shared/components/jsx';

import NavLink from './NavLink.astro';
import { navLinks } from '../../../site.json';
---

<footer class="mt-32">
	<Container>
		<div class="border-t border-zinc-100 py-10 pb-16 dark:border-zinc-700/40">
			<div class="relative px-4 sm:px-8 lg:px-12">
				<div
					class={clsx(
						'flex flex-col items-center justify-between w-full',
						'sm:flex-row lg:max-w-5xl lg:mx-auto'
					)}
				>
					<div class="text-sm">
						<SpotifyCard client:load />
						<ul class="flex items-center gap-1 md:gap-2">
							{navLinks.map((link) => <NavLink link={link} />)}
						</ul>
					</div>
					<div
						class="flex flex-col items-center md:self-end pb-2 md:items-end text-sm text-zinc-400 dark:text-zinc-500"
					>
						<SocialLinks styles="mb-2" size={20} />
						<p>
							Powered by <a
								href="https://astro.build/"
								target="_blank"
								rel="noopener noreferrer"
								class="text-teal-600 dark:text-teal-300 hover:underline hover:text-teal-700 font-semibold"
								>Astro</a
							>
						</p>
						<p>
							&copy; {new Date().getFullYear()} Sergio Barria. All rights reserved
						</p>
					</div>
				</div>
			</div>
		</div>
	</Container>
</footer>
