---
import { ExternalLinkIcon } from '@radix-ui/react-icons';

interface Props {
	title: string;
	value: string | number;
	link: string;
}

const { title, value, link } = Astro.props as Props;
---

<div class="flex flex-col p-4 rounded-lg shadow-lg bg-zinc-100 dark:bg-zinc-800">
	<div class="flex items-center justify-between">
		<h4 class="text-zinc-600 dark:text-zinc-400">{title}</h4>
		<span>
			<a href={link} class="hover:text-brand">
				<ExternalLinkIcon
					width={18}
					height={18}
					className="text-zinc-600 dark:text-zinc-500 hover:text-teal-500 hover:dark:text-teal-500"
				/>
			</a>
		</span>
	</div>
	<span class="mt-auto text-2xl font-semibold md:text-3xl lg:text-4xl">{value}</span>
</div>
